{
  report: {
    report: @report,
    user: {
      id: @report.user.id,
      nickname: @report.user.nickname,
      image: @report.user.image
    }
  },
  comments: @report.comments.map { |comment|
    {
      comment: comment,
      user: {
        nickname: comment.user.nickname,
        image: comment.user.image
      }
    }
  }
}
